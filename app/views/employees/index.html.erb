<div class="container mt-4">
  <h1 class="mb-3 text-center">Employee Management</h1>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h5 class="card-title border-bottom pb-2">Employee List</h5>

      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Hiring Date</th>
            <th>Job Title</th>
            <th>Status</th>
            <th>Employment Type</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.id %></td>
              <td><%= employee.first_name %> <%= employee.last_name %></td>
              <td><%= employee.hiring_date %></td>
              <td><%= employee.job_title %></td>
              <td>
                <span class="badge <%= employee.active ? 'bg-success' : 'bg-danger' %>">
                  <%= employee.active ? "Active" : "Inactive" %>
                </span>
              </td>
              <td><%= employee.employment_status %></td>
              <td>
                <%= link_to "View", employee, class: "btn btn-sm btn-primary" %>
                <%= link_to "Edit", edit_employee_path(employee), class: "btn btn-sm btn-warning" %>
                <%= button_to "Delete", employee, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="mt-3">
        <%= link_to "New Employee", new_employee_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
