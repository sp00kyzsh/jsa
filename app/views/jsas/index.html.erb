<p class="text-success"><%= notice %></p>

<% content_for :title, "Job Safety Analysis (JSAs)" %>

<div class="container mt-4">
  <h1 class="mb-3 text-center">Job Safety Analysis (JSAs)</h1>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Job Description</th>
          <th>Date</th>
          <th>Location</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @jsas.each do |jsa| %>
          <tr>
            <td><%= jsa.id %></td>
            <td><%= jsa.job_description %></td>
            <td><%= jsa.date %></td>
            <td><%= jsa.location %></td>
            <td>
              <%= link_to "Show", jsa_path(jsa), class: "btn btn-primary btn-sm" %>
              <%= link_to "Edit", edit_jsa_path(jsa), class: "btn btn-warning btn-sm" %>
              <%= link_to "Delete", jsa_path(jsa), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
