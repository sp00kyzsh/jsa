<div class="container mt-4">
  <h1 class="text-center">Request Time Off</h1>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h5 class="card-title border-bottom pb-2">New Time Off Request</h5>

      <%= form_with(model: [@employee, @time_off_request], local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :start_date, "Start Date" %>
          <%= form.date_field :start_date, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :end_date, "End Date" %>
          <%= form.date_field :end_date, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :note, "Additional Information" %>
          <%= form.text_area :note, class: "form-control" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= link_to "Cancel", employee_time_off_requests_path(@employee), class: "btn btn-secondary" %>
          <%= form.submit "Submit Request", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
